<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="210.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llayoutDaySpecial"
        android:layout_width="fill_parent"
        android:layout_height="210.0dip" >

        <!-- android:background="@drawable/time_limit_item_bg" -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="-10.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgTimeLimit"
                android:layout_width="122.0dip"
                android:layout_height="200.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"
                android:src="@drawable/timelimit" />

            <LinearLayout
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:background="@color/split"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/llayoutDaySpecialGoods"
                android:layout_width="177.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgDaySpecialGoods1"
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dip"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_time_limit" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/split"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/imgDaySpecialGoods2"
                    android:layout_width="fill_parent"
                    android:layout_height="110.0dip"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_time_limit" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>