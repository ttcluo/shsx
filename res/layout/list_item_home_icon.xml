<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llHomeIcon"
        android:layout_width="fill_parent"
        android:layout_height="74.0dip"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip" >

        <LinearLayout
            android:id="@+id/llCollection"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivCollection"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:src="@drawable/shortcut_fav_n" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="bottom|center"
                android:text="收藏夹"
                android:textColor="@color/gray999"
                android:textSize="12.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOrder"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:src="@drawable/shortcut_order_n" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="bottom|center"
                android:text="我的订单"
                android:textColor="@color/gray999"
                android:textSize="12.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIntegration"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivIntegration"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:src="@drawable/shortcut_checkin_n" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="bottom|center"
                android:text="签到赚积分"
                android:textColor="@color/gray999"
                android:textSize="12.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRecharge"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivRecharge"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:src="@drawable/shortcut_change_n" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="bottom|center"
                android:text="账户充值"
                android:textColor="@color/gray999"
                android:textSize="12.0dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>