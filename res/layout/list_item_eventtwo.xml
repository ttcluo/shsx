<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/split" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="108.0dip"
            android:layout_marginTop="10.0dip" >

            <ImageView
                android:id="@id/imgEvent"
                android:layout_width="fill_parent"
                android:layout_height="108.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@color/bg_color"
                android:scaleType="centerCrop"
                android:src="@drawable/default_banner" />

            <ImageView
                android:id="@+id/ivEventWiilcoomTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/event_wiilcoom_tag" />

            <LinearLayout
                android:id="@+id/llOver"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="#88797979"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_bg_gray666_corner"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingTop="4.0dip"
                    android:text="活动已结束"
                    android:textColor="@android:color/white"
                    android:textSize="16.0dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray333"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray666"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/split" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip" >

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginLeft="6.0dip"
                android:gravity="left|center"
                android:textColor="@color/gray999"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25.0dip"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:text="查看详情"
                android:textColor="@color/gray999"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/indicator_right" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/split" />

</LinearLayout>